{
  "$schema": "https://schema.tauri.app/capabilities/2",
  "identifier": "main-capability",
  "description": "Main capability for Workmate app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "shell:default",
    "fs:default",
    "process:default",
    {
      "identifier": "fs:allow-read-dir",
      "allow": [{ "path": "$HOME/**" }]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "$HOME/**" }]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        { "name": "opencode", "cmd": "opencode", "args": true }
      ]
    }
  ]
}
